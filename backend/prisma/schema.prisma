generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trip {
  id          Int           @id @default(autoincrement())
  name        String
  description String?
  image       String?
  startDate   DateTime
  endDate     DateTime
  participant String[]        // z.B. Namen oder Emails als Array
  destinations TripDestination[]      // n:m-Verknüpfung
}

model Destination {
  id          Int           @id @default(autoincrement())
  name        String
  description String?
  startDate   DateTime
  endDate     DateTime        // z.B. Sehenswürdigkeiten
  activities  String[]        // URLs zu Bildern
  photos      String[]        // n:m-Verknüpfung
  trips       TripDestination[]
}

// n:m-Tabelle (verbindungstabelle)
model TripDestination {
  tripId        Int
  destinationId Int
  trip          Trip        @relation(fields: [tripId], references: [id])
  destination   Destination @relation(fields: [destinationId], references: [id])
  @@id([tripId, destinationId])
}
